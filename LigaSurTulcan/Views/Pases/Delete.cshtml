<div>
    
    <hr />
    <dl class="col-md-10">
        <dt>
            <label>Fecha de Pase</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            <label>Valor de Pase</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.valor)
        </dd>

        <dt>
            <label>Club que ingresa</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.equipo_sale)
        </dd>

        <dt>
            <label>Club que sale</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Equipo.nom_equipo)
        </dd>

        <dt>
            <label>Jugador</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Jugador.ced_jugador)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Regresar a la Lista", "Index")
