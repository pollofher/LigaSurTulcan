@model LigaSurTulcan.Models.Jugador

@{
    ViewBag.Title = "Edit";

}
<br /><br /><br /><br />
<h2 class="text-center" style="font-family:Jokerman">Editar Jugador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal text-center">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_jugador)

        <div class="form-group">
            <label class="col-md-12">Cédula</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.EditorFor(model => model.ced_jugador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ced_jugador, "", new { @class = "text-danger" })
            </div>

            <label class="col-md-12">Nombres</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.EditorFor(model => model.nom_jugador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom_jugador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Apellidos</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.EditorFor(model => model.apell_jugador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apell_jugador, "", new { @class = "text-danger" })
            </div>

            <label class="col-md-12">Fecha de Nacimiento</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.EditorFor(model => model.fechaNac_jugador, new { htmlAttributes = new { @class = "form-control", Type = "Date" } })
                @Html.ValidationMessageFor(model => model.fechaNac_jugador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Carnet</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.EditorFor(model => model.carnet_jugador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.carnet_jugador, "", new { @class = "text-danger" })
            </div>
            <label class="col-md-12">Club</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.DropDownList("id_equipo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_equipo, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <label class="col-md-12">Afiliación</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.EditorFor(model => model.fecha_filiacion, new { htmlAttributes = new { @class = "form-control", Type = "Date" } })
                @Html.ValidationMessageFor(model => model.fecha_filiacion, "", new { @class = "text-danger" })
            </div>

            <label class="col-md-12">Estado Civil</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.DropDownListFor(model => model.estado_civil, new SelectList(new[] { "Soltero", "Casado", "Unión Libre", "Divorciado" }), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.estado_civil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Instrucción</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.DropDownListFor(model => model.instruccion, new SelectList(new[] { "Primaria", "Secundaria", "Superior", "Post Grado" }), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.instruccion, "", new { @class = "text-danger" })
            </div>

            <label class="col-md-12">Profesión</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.DropDownListFor(model => model.profesion, new SelectList(new[] { "Abogado", "Albañil", "Arquitecto", "Bodeguero", "Comerciante", "Docente", "Doctor", "Estudiante", "Estibador", "Ingeniero", "Mecanico", "Taxista" }), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.profesion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Provincia</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.DropDownListFor(model => model.provincia, new SelectList(new[] { "Azuay", "Bolivar", "Cañar", "Carchi", "Imbabura", "Pichincha" }), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.provincia, "", new { @class = "text-danger" })
            </div>

            <label class="col-md-12">Parroquia</label>
            <div class="col-lg-3" style="float:none;margin:auto;">
                @Html.DropDownListFor(model => model.parroquia, new SelectList(new[] { "Tulcán", "Julio Andrade", "Tufiño", "El Maldonado", "Huaca", "Urbina", "Gonzáles Suaréz" }), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.parroquia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Fotografía</label>
            <div class="col-lg-3" style="float:none;margin:auto;">

                <img src="@Url.Action("Edit","Jugador",new { id=Model.Id_jugador})" style="margin:10px" height="50" width="50" id="imagePreview" />
                <input type="file" name="foto_jugador" required accept="image/jpg, image/png" onchange="ShowImagePreview(this,document.getElementById('imagePreview'))" /><br />
                <a>(Tamaño imagen: Ancho:150 Altura:140 || Formato PNG)</a>
            </div>
        </div>

        <div class="form-group">
            <div  class="col-lg-3" style="float:none;margin:auto;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                @Html.ActionLink("Regresar a Lista", "Index",null,new { style="color:blue"})
            </div>
        </div>
    </div>
}

<br /><br />
