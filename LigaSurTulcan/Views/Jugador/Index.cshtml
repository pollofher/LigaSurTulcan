@model IEnumerable<LigaSurTulcan.Models.Jugador>

@{
    ViewBag.Title = "Index";
   
    @Html.Partial("Alerta");


}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="http://codeseven.github.com/toastr/toastr.js"></script>
<link rel="stylesheet" type="text/css" href="http://codeseven.github.com/toastr/toastr.css">
<link href="~/Content/fontawesome.min.css" rel="stylesheet" />
<link href="~/Content/Letras.css" rel="stylesheet" />
<!--Loading font awesome icons.-->
<script src="https://use.fontawesome.com/d94f445648.js"></script>
<br /><br /><br /><br />
@if (ViewBag.sms != null)
{
    <div class="col-md-12">
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
            <h4><i class="icon fa fa-exclamation-triangle"></i> Alerta!</h4>
            @ViewBag.sms
        </div>
    </div>
}
@if (ViewBag.smsok != null)
{
    <div class="col-md-12">
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
            <h4><i class="icon fa fa-check"></i> Correcto!</h4>
            @ViewBag.smsok
        </div>
    </div>
}
<br /><br />
<h2 class="text-center letra" style="color:black; font-family:Jokerman">Jugadores</h2>


<br />
<div class="col col-2">
    <div class="row" style="text-align:left;padding:5px">

        <a href="~/Jugador/Create" class="btn btn-success fa fa-plus"> Nuevo</a>
    </div>
</div>
<br />

<table class="table table-striped table-hover table-condensed" id="JugadorTable" style="margin-top:20px;padding:initial">
    <thead class="col-md-12" style="width:200%; height:200%">
        <tr>
            <th>
                <label>Cédula</label>
            </th>
            <th>
                <label>Nombres</label>
            </th>
            <th>
                <label>Apellidos</label>
            </th>
            <th>
                <label>Fecha Nacimiento</label>
            </th>
            <th>
                <label>Carnet</label>
            </th>
            <th>
                <label>Foto</label>
            </th>
            <th>
                <label>Afiliación</label>
            </th>
            <th>
                <label>Estado Civil</label>
            </th>
            <th>
                <label>Instrucción</label>
            </th>
            <th>
                <label>Profesión</label>
            </th>
            <th>
                <label>Provincia</label>
            </th>
            <th>
                <label>Parroquia</label>
            </th>
            <th>
                <label>Club</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ced_jugador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nom_jugador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apell_jugador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaNac_jugador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.carnet_jugador)
                </td>
                <td>
                    <img src="~/ImgJugador/@item.foto_jugador" class="figure-img img-circle" style="width:80px;height:70px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_filiacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado_civil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.instruccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.profesion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.provincia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.parroquia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipo.nom_equipo)
                </td>
                <td class="text-center">
                    <a class="btn btn-primary" href="/Jugador/Edit/@item.Id_jugador"><i class="fas fa-fw fa-edit"></i></a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#alert" data-id="/Jugador/Delete/@item.Id_jugador">
                        <i class="fas fa-fw fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>

</table>

<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#JugadorTable').DataTable({
                "scrollX": 100,
                "bFilter": true,
                "bLengthChange": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                }
            });
        });
    </script>

    <script>
$(document).ready(function (e) {
  $('#alert').on('show.bs.modal', function(e) {
     var id = $(e.relatedTarget).data().id;
     $(e.currentTarget).find('#url').attr('href', (id));

  });
});
//SetTimeout(function(){
// $("#ViewBag").fadeOut(1500);
//},3000);
    </script>
}


