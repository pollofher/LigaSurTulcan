@model IEnumerable<LigaSurTulcan.Models.Campeonato_Equipo>

@{
    ViewBag.Title = "Index";
    @Html.Partial("Alerta");
}
<br /><br /><br /><br />
@if (ViewBag.sms != null)
{
    <div class="col-md-12">
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
            <h4><i class="icon fa fa-exclamation-triangle"></i> Alerta!</h4>
            @ViewBag.sms
        </div>
    </div>
}
@if (ViewBag.smsok != null)
{
    <div class="col-md-12">
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Correcto!</h4>
            @ViewBag.smsok
        </div>
    </div>
}
<br /><br />
<h2 class="text-center letra" style="color:black; font-family:Jokerman">Inscripciones</h2>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="http://codeseven.github.com/toastr/toastr.js"></script>
<link rel="stylesheet" type="text/css" href="http://codeseven.github.com/toastr/toastr.css">
<link href="~/Content/fontawesome.min.css" rel="stylesheet" />
<link href="~/Content/Letras.css" rel="stylesheet" />
<!--Loading font awesome icons.-->
<script src="https://use.fontawesome.com/d94f445648.js"></script>
<br />
<div class="col col-2">
    <div class="row" style="text-align:left;padding:5px">

        <a href="~/Inscripcion/Create" class="btn btn-success fa fa-plus"> Nuevo</a>
    </div>
</div>
<br />

<table class="table table-striped table-hover table-condensed text-center" id="CampeonatoTable" style="margin-top:20px">
    <thead>
        <tr>
            <th>
                Campeonato
            </th>
            <th>
                Club
            </th>
            <th>
                Inscripción
            </th>
            <th>
                Garantía
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Campeonato.Nom_Campeonato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id_Equipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.inscripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.garantia)
                </td>
                <td class="text-center">
                    <a class="btn btn-primary" href="/Inscripcion/Edit/@item.id_campeonato_equi"><i class="fas fa-fw fa-edit"></i></a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#alert" data-id="/Inscripcion/Delete/@item.id_campeonato_equi">
                        <i class="fas fa-fw fa-trash-alt"></i>
                    </button>
                </td>

            </tr>

        }


    </tbody>


</table>


<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#CampeonatoTable').DataTable({
                "bFilter": true,
                "bLengthChange": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                }
            });
        });
    </script>

    <script>
$(document).ready(function (e) {
  $('#alert').on('show.bs.modal', function(e) {
     var id = $(e.relatedTarget).data().id;
     $(e.currentTarget).find('#url').attr('href', (id));

  });
});
//SetTimeout(function(){
// $("#ViewBag").fadeOut(1500);
//},3000);
    </script>



}
